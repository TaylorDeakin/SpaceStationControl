<div class="row">
    <div class="col-md-8">
        {{#with station}}
            <h2>{{name}} | {{system}}</h2>
            {{#with controllingFaction}}
                <p class="lead">
                    {{name}}
                </p>
            {{/with}}
        {{/with}}
        <p class="lead">{{status}}</p>
    </div>
    <div class="col-md-4">
        <h2>System Factions</h2>
        {{#with station}}
            <ul class="list-unstyled">
            {{#each factionList}}
                <li>{{name}}</li>
            {{/each}}
            </ul>
        {{/with}}


    </div>
</div>